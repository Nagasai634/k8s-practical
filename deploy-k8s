apiVersion: apps/v1
kind: Deployment
metadata:
  name: deploy-ingress-green
spec:
  replicas: 1
  selector:
     matchLabels:
       app: green-app
  template:
    metadata:
      labels:
        app: green-app
    spec:
      containers:
        - name: green-app
          image: {{.Values.image}}
          ports:
            - containerPort: 80
